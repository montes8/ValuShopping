<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="@dimen/dim_tay_16"
    android:layout_height="match_parent">

    <View
        android:id="@+id/shimmerAdminTitleBanner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:background="@drawable/shimmer_background_four"
        android:layout_height="@dimen/size_60"/>


    <View
        android:id="@+id/shimmerAdminEditTitle"
        app:layout_constraintTop_toBottomOf="@+id/shimmerAdminTitleBanner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="@dimen/dim_tay_0"
        android:layout_marginTop="@dimen/dim_tay_48"
        android:background="@drawable/shimmer_background_four"
        android:layout_height="@dimen/dim_tay_48"/>

    <View
        android:id="@+id/shimmerAdminTitleBannerComment"
        app:layout_constraintTop_toBottomOf="@+id/shimmerAdminEditTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="@dimen/dim_tay_0"
        android:layout_marginTop="@dimen/dim_tay_20"
        android:background="@drawable/shimmer_background_four"
        android:layout_height="@dimen/dim_tay_24"/>


    <View
        android:id="@+id/shimmerAdminEditBannerComment"
        app:layout_constraintTop_toBottomOf="@+id/shimmerAdminTitleBannerComment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="@dimen/dim_tay_0"
        android:layout_marginTop="@dimen/dim_tay_20"
        android:background="@drawable/shimmer_background_four"
        android:layout_height="@dimen/size_128"/>

    <View
        android:id="@+id/shimmerAdminTitleBannerRegister"
        app:layout_constraintTop_toBottomOf="@+id/shimmerAdminEditBannerComment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="@dimen/dim_tay_0"
        android:layout_marginTop="@dimen/dim_tay_20"
        android:background="@drawable/shimmer_background_four"
        android:layout_height="@dimen/dim_tay_24"/>


    <View
        android:id="@+id/shimmerAdminTitleBannerRadio"
        app:layout_constraintTop_toBottomOf="@+id/shimmerAdminTitleBannerRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="@dimen/dim_tay_0"
        android:layout_marginTop="@dimen/dim_tay_20"
        android:background="@drawable/shimmer_background_four"
        android:layout_height="@dimen/dim_tay_40"/>

</androidx.constraintlayout.widget.ConstraintLayout>